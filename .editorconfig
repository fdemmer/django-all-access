# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{py,md,rst,ini}]
max_line_length = 90

[*.{html,css,scss,js,json,yml,yaml}]
max_line_length = 100
tab_width = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
